bindsym $mod+F1 exec google-chrome --app=http://pandora.com

#Chrome
bindsym $mod+C exec google-chrome-stable

#Laptop Only
bindsym Ctrl+$mod+S exec ~/.i3/screen-adjust.sh laptop

#Double Monitors
bindsym Ctrl+$mod+D exec ~/.i3/screen-adjust.sh double-samsung


